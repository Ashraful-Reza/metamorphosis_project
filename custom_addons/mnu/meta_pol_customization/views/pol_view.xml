<odoo>
  <record id="view_stock_quant_location_tree" model="ir.ui.view">
      <field name="name">stock.quant.location.tree</field>
      <field name="model">stock.quant</field>
      <field name="arch" type="xml">
          <tree create="false" edit="false" delete="false">
              <field name="location_id"/>
              <field name="quantity"/>
              <field name="product_uom_id" groups="uom.group_uom"/>
          </tree>
      </field>
  </record>
  <record id="xtend_view_purchase_order_form" model="ir.ui.view">
      <field name="name">xtend.view.purchase.order.form</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form" />
      <field name="arch" type="xml">
          <xpath expr="//field[@name='order_line']/tree/field[@name='product_qty']" position="after">
            <field name="qty_available" optional="show"/>
            <button name="action_view_stock_details" 
                        type="object"
                        string="Stock"
                        icon="fa-cubes"
                        invisible="product_id==False"/>
          </xpath>
      </field>
  </record>
</odoo>
