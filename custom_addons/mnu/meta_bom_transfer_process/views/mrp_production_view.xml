<odoo>
  <data>

    <!-- Tree view for "mrp.production" -->
    <record id="view_mrp_production_inh_tree" model="ir.ui.view">
        <field name="name">view.mrp.production.inh.tree</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
        <field name="arch" type="xml">
          <xpath expr="//field[@name='product_id']" position="after">
            <field name="sale_id" optional="show"/>            
          </xpath>
        </field>
    </record>
    
    <!-- Form view for "mrp.production" -->
    <record id="view_mrp_production_form" model="ir.ui.view">
        <field name="name">view.mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="before">
              <field name="sale_id"/>
              <field name="part_no" invisible="sale_id==False"/>
            </xpath>
        </field>
    </record>

  </data>
</odoo>
