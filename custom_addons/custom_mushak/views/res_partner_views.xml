<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add BIN ID field to partner form view -->
    <record id="view_partner_form_inherit_bin" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.bin</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="bin_id" placeholder="e.g. 000000000-0000"/>
            </xpath>
        </field>
    </record>
</odoo>