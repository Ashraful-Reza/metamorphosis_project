<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_sale_order" name="Portal My Home: Sales" customize_show="True" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">My Sales Order</t>
                <t t-set="url" t-value="'/my/orders'"/>
                <t t-set="count" t-esc="count_sales_order"/>
                <t t-set="show_count" t-value="True"/>
            </t>
        </xpath>
    </template>
</odoo>
